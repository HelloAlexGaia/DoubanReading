<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:padding="@dimen/dp_16"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
    <LinearLayout
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginBottom="@dimen/dp_8"
        android:id="@+id/linearlayout_book_info"
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            tools:text="冰与火之歌"
            android:layout_marginBottom="@dimen/dp_8"
            android:id="@+id/textview_book_title"
            style="@style/text_title_style"/>
        <TextView
            style="@style/text_title_style"
            android:id="@+id/textview_book_author"
            android:textSize="@dimen/sp_12"
            android:layout_marginBottom="@dimen/dp_8"
            tools:text="[美]乔治·R. R. 马丁"/>
        <TextView
            style="@style/text_title_style"
            tools:text="出版日期：2008-09"
            android:id="@+id/textview_pubdate"
            android:textSize="@dimen/sp_12"
            android:textColor="@color/colorSecondaryText"
            />
    </LinearLayout>
    <TextView
        style="@style/text_title_style"
        tools:text="评分：9.7"
        android:id="@+id/textview_rate"
        android:textSize="@dimen/sp_12"
        android:layout_alignBottom="@id/linearlayout_book_info"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"/>
    <View
        android:background="@color/colorDivider"
        android:layout_below="@id/linearlayout_book_info"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_1"/>


</RelativeLayout>